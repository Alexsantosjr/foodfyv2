{% extends "layout.njk" %}

{% block content %}
    <form class="chef_card"action="/home" method="post">
        <section 
        class="avatar"
        style="background: url(https://source.unsplash.com/collection/8631282/500x500) no-repeat center center / cover"></section>

        <section class="details">
            <h3>Novo Chef</h3>

            <div class="item">
                <div>Sua foto</div>
                    <div>
                        <input 
                            type="url"
                            name="avatar_url"
                            placeholder="https://"
                            value="{{chef.avatar_url}}"
                        >
                    </div>
            </div>

            <div class="item">
                <div>Seu Nome</div>
                    <div>
                        <input 
                            type="text" 
                            name="name"
                            placeholder="Nome do chef"
                            value="{{ chef.name }}">
                    </div>
            </div>

            <div class="item">
                <div>Especialidades</div>
                <div>
                    <input 
                    type="text"
                    name="services"
                    placeholder="Separe suas especialidades por vÃ­rgula"
                    value="{{ chef.services }}">
                </div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>
                    <input 
                    type="text"
                    name="email"
                    placeholder="Digite seu e-mail"
                    value="{{ chef.email }}">
                </div>
            </div>

            <button class="enviar" type="submit">Salvar</button>

        </section>
    </form>


{% endblock content %}

