{% extends "layout.njk" %}

{% block content %}
    <form class="chef_card"action="/home" method="post">
        <section 
        class="avatar"
        style="background: url(https://source.unsplash.com/collection/9862410/500x500) no-repeat center center / cover"></section>

        <section class="details">
            <h3>Novo Chef</h3>

            <div class="item">
                <div>Sua foto</div>
                    <div>
                        <input 
                            type="url"
                            name="avatar_url"
                            placeholder="https://"
                            value="{{chef.avatar_url}}"
                        >
                    </div>
            </div>
            
        </section>
    </form>


{% endblock content %}

